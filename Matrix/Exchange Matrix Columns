class Solution
{
    public:
    void exchangeColumns(vector<vector<int> > &matrix)
    {
        int n1 = matrix.size();
        int m1 = matrix[0].size();
    	for(int i = 0; i < n1; i++)
    	{
    	    //swapping first element of each row with last element of that row.
			swap(matrix[i][0], matrix[i][m1 - 1]);
    	}
    }
};
